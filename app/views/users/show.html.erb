<div class="text-center">
  <p>
    <%= image_tag @user.avatar.url(:medium) %>
  </p>
  <p>
    <strong>Name:</strong>
    <%= @user.user_name %>
  </p>
   
  <p>
    <strong>Aadhar No :</strong>
    <%= @user.user_aadhar_number %>
  </p>
  <p>
    <strong>Birth Date :</strong>
    <%= @user.user_birthdate %>
  </p>
   
  <p>
    <strong>Father Name:</strong>
    <%= link_to @user.father_name, father_user_path(@user.id) %>
  </p>

  <p>
    <strong>Mother Name:</strong>
    <%= link_to @user.mother_name, mother_user_path(@user.id) %>
  </p>

  <p>
    <strong>Children</strong>
    <% @user.childrens.each do |child| %>
      <%= link_to child.children_name, children_user_path(@user.id,:child_id => child.id) %>    
    <%end%>
  </p>
  <p>
  <strong>User's Attachments :</strong>
  <%@document.each do |attr_name|%>
    <% if attr_name.attachment.exists? %>
    <%= image_tag attr_name.attachment.url(:thumb) %>
  <% end %>
    <%= attr_name.attachment_file_name%>

  <%end%>
</p>
 

   

  <%= link_to 'Edit', edit_user_path(@user), :class => "button btn btn-primary"%>
  <%= link_to 'Back', users_path, :class => "button btn btn-primary" %>
</div>
